{% extends "base.jinja" %}

{% block title %}Machine Keys{% endblock %}

{% block head %}
<style>
    body { font-family: monospace; max-width: 600px; margin: 2rem auto; }
    table { width: 100%; border-collapse: collapse; }
    td { padding: 0.25rem 0.5rem; }
    tr:hover { background: #f5f5f5; }
    .size { text-align: right; color: #666; }
</style>
{% endblock %}

{% block content %}
    <h1>Keys</h1>
    {% if keys.is_empty() %}
        <p>No keys found.</p>
    {% else %}
        <table>
            {% for key in keys %}
            <tr>
                <td>{{ key.id }}</td>
                <td>{{ key.description }}</td>
                <td>{{ key.group_id }}</td>
            </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}
